                            <a href="{{ path('logaout') }}"><i class="fa fa-fw fa-power-off"></i> Salir</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="active">
                        <a href="{{ path('index') }}"><i class="fa fa-fw fa-dashboard"></i> Portada</a>
                    </li>
                    <li>
                        <a href="{{ path('todopost') }}"><i class="fa fa-fw fa-bar-chart-o"></i>Top post</a>
                    </li>
                    <li>
                        <a href="{{ path('listpost') }}"><i class="fa fa-fw fa-table"></i> Listas de post</a>
                    </li>
                    <li>
                        <a href="{{ path('newpost') }}"><i class="fa fa-fw fa-edit"></i> Crear post</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#demo"><i
                                    class="fa fa-fw fa-arrows-v"></i> Dropdown <i
                                    class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapse">
                            <li>
                                <a href="#">Crear categorias</a>
                            </li>
                            <li>
                                <a href="#"></a>
                            </li>
                        </ul>
                    </li>

            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Editar post
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> <a href="{{ path('index') }}">Portada</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-edit"></i> Editar post
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-info alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <i class="fa fa-info-circle"></i> <strong>Bienvenido</strong> <a href="#"
                                                                                         class="alert-link">{{ app.session.get('nombre') }} </a>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <form action="{{ path('update',{id: post.id }) }}" method="post" class="form-horizontal" role="form" novalidate="novalidate" enctype="multipart/form-data">
              {{ form_start(form,{'attr':{'novalidate':'novalidate','role':'form','class':'form-horizontal'}}) }}

            <div class="container">
                <hr>
                <div class="row">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-notice alert alert-success alert-dismissable" >
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <strong>{{ flashMessage }}</strong>
                        </div>
                    {% endfor %}
                    <!-- left column -->
                    <div class="col-md-3">
                        <div class="text-center">
                            <img src="//placehold.it/100" class="avatar" style="width: 50%" alt="avatar">
                            <h6>Carga una foto diferente...</h6>
                            {{ form_widget(form.imagen,{'attr':{'class':'form-control'},'type':'file' }) }}
                        </div>
                    </div>
                    <!-- edit form column -->

                    <div class="col-md-9 personal-info">
                        <h3 class="text-center">Informacion del post</h3>


                            <div class="form-group">
                                <label class="col-lg-3 control-label">titulo:</label>
                                <div class="col-lg-8">
                                    {{ form_widget(form.titulo,{'attr':{'class':'form-control','placeholder':'Titulo de la publicacion'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Contenido:</label>
                                <div class="col-lg-8">
                                    {{ form_widget(form.contenido,{'attr':{'class':'form-control','placeholder':'contenido'}}) }}
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-lg-3 control-label">Categorias:</label>
                                <div class="col-lg-8">
                                    {% for categoria in categorias %}
                                        <label for="{{ categoria.nombre }}"
                                               class="btn btn-info">{{ categoria.nombre }} <input
                                                    value="{{ categoria.id }}" type="checkbox"
                                                    id="{{ categoria.nombre }}" class="badgebox">
                                            <span class="badge">&check;</span></label>
                                    {% endfor %}
                                </div>
                            </div>

                            {{ form_widget(form._token,{'attr':{'class':'form-control'} ,'type':'hidden' }) }}
                    </div>
                </div>
                <div class="row pull-right">
                    <div class="col-md-12" style="margin-top: 20px;">
                        {{ form_widget(form.save,{'label':'Guardar','attr':{'class':'btn btn-success'}}) }}
                        <span></span>
                        <input type="reset" class="btn btn-default" value="Cancel">
                    </div>

            </form>
                </div>
            </div>
        </div>
        <hr>


    </div>
    <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

    </div>


{% endblock %}

