                            <i class="fa fa-edit"></i> Nuevo Post
                        </li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-sm">
                        <form action="{{ path('newpost') }}" method="post" role="form" enctype="multipart/form-data">
                            <fieldset>
                                <legend class="text-center header">Crear Post</legend>
                                <form action="{{ path('newpost') }}" method="post" role="form">
                                    <div class="row control-group">
                                        <div class="form-group col-xs-12 floating-label-form-group controls">
                                            <label>Titulo</label>
                                            {{ form_widget(form.titulo,{'attr':{'class':'form-control','placeholder':'ingrese el titulo del post'}}) }}
                                        </div>
                                    </div>
                                    <div class="row control-group">
                                        <div class="form-group col-xs-12 floating-label-form-group controls">
                                            <label>Contenido</label>
                                            {{ form_widget(form.contenido,{'attr':{'class':'form-control','placeholder':'Ingrese el contenido del post','rows':'5'}}) }}
                                        </div>
                                    </div>


                                    <div class="row control-group">
                                        <div class="form-group col-xs-12 floating-label-form-group controls">
                                            <label>Categorias</label>
                                        </div>
                                    </div>
        <!--
                                    <div class="row control-group ">
                                        <div class="form-group col-xs-12 floating-label-form-group controls">
                                            <div class="container">
                                                <div class="row text-center">
