                                        <div class="form-group col-xs-12 floating-label-form-group controls">
                                            <label class="control-label">imagen</label>
                                            {{ form_widget(form.imagen,{'attr':{'class':'form-control','type':'file','multiple data-show-upload':'false'
                                                ,'data-show-caption':'true'}}) }}

                                        </div>
                                    </div>

                                    {{ form_widget(form._token,{'attr':{'class':'form-control'} ,'type':'hidden' }) }}
                                    <br>
                                    <div id="success"></div>
                                    <div class="row">
                                        <div class="form-group col-xs-9">
                                            {{ form_widget(form.save,{'label':'Registrar','attr':{'class':'btn btn-success'}}) }}
                                        </div>
                                    </div>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>




